{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <h1>{{ item.model }}</h1>
  <div class="card">
    <div class="card-body">
      <table class="table table-borderless table-sm">
        <tr>
          <th>ID</th>
          <td>{{ item.id }}</td>
        </tr>
        <tr>
          <th>Issue date</th>
          <td>{{ item.issueDate | date }}</td>
        </tr>
        <tr>
          <th>Mileage</th>
          <td>{{ item.mileage | number_format }}</td>
        </tr>
        <tr>
          <th>Modal Year</th>
          <td>{{ item.modelYear | number_format }}</td>
        </tr>
        <tr>
          <th>Vin
          </th>
          <td>{{ item.vin }}</td>
        </tr>
      </table>
    </div>
  </div>
  <p>
    <a href="/cars">Back</a>
  </p>
</div>
{% endblock %}
